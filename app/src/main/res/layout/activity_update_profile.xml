<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".update_profile">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_img2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="88dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/profile3" />

    <Button
        android:id="@+id/Profile_img_edit"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:contentDescription="TODO"
        android:scaleType="fitXY"
        android:background="@drawable/edit"
        app:layout_constraintBottom_toBottomOf="@+id/profile_img2"
        app:layout_constraintEnd_toEndOf="@+id/profile_img2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/profile_img2"
        app:layout_constraintTop_toTopOf="@+id/profile_img2"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/Up_FullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="Full Name"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Up_In_FullName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.076"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_img2"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/Up_In_FullName"
        android:layout_width="348dp"
        android:layout_height="46dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/custom_shape"
        android:importantForAutofill="no"
        android:includeFontPadding="true"
        android:inputType="text"
        android:labelFor="@+id/firstname"
        android:paddingLeft="17dp"
        android:textColor="@color/cardview_dark_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_img2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Up_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="E-mail"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Up_In_Email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Up_In_FullName"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/Up_In_Email"
        android:layout_width="348dp"
        android:layout_height="46dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/custom_shape"
        android:importantForAutofill="no"
        android:includeFontPadding="true"
        android:inputType="text"
        android:labelFor="@+id/firstname"
        android:paddingLeft="17dp"
        android:textColor="@color/cardview_dark_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Up_In_FullName"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Up_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="Phone Number"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Up_In_Phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/Up_In_Phone"
        android:layout_width="348dp"
        android:layout_height="46dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/custom_shape"
        android:importantForAutofill="no"
        android:includeFontPadding="true"
        android:inputType="text"
        android:labelFor="@+id/firstname"
        android:paddingLeft="17dp"
        android:textColor="@color/cardview_dark_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Up_In_Email"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/Up_Save_btn"
        android:layout_width="148dp"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:padding="0dp"
        android:text="SAVE"
        android:textColor="#FFFFFF"


        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.832"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Up_In_Phone"
        app:layout_constraintVertical_bias="0.027" />

    <Button
        android:id="@+id/Up_Cancle_btn"
        android:layout_width="148dp"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_grey"
        android:onClick="profile"
        android:padding="0dp"
        android:text="CANCLE"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Up_In_Phone"
        app:layout_constraintVertical_bias="0.027" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="344dp"
        android:layout_height="45dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/custom_shape2"
        android:paddingLeft="12dp"
        android:paddingTop="9dp"

        android:paddingBottom="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/homeImg_btn"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="12dp"
        android:alpha="0.3"
        android:background="#00FF0000"
        android:contentDescription="TODO"
        android:onClick="Home1"
        android:padding="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/homeblack"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.631"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/cartimg_btn"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="20dp"
        android:alpha="0.3"
        android:background="#00FF0000"
        android:contentDescription="TODO"
        android:padding="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/cart"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:layout_constraintStart_toEndOf="@+id/homeImg_btn"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.631"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/rateImg_btn"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="20dp"
        android:alpha="0.3"
        android:background="#00FF0000"
        android:contentDescription="TODO"
        android:padding="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/star"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:layout_constraintStart_toEndOf="@+id/cartimg_btn"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.631"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/profileImg_btn"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="12dp"
        android:background="#00FF0000"
        android:contentDescription="TODO"
        android:padding="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/profile_green"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintStart_toEndOf="@+id/rateImg_btn"
        app:layout_constraintTop_toTopOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.631"
        tools:ignore="MissingConstraints" />




</androidx.constraintlayout.widget.ConstraintLayout>